{
    "name": "haassie/timeular",
    "description": "Client to get data from the Timeular API",
    "type": "library",
    "authors": [
        {
            "name": "Richard Haeser",
            "email": "richard@richardhaeser.com"
        }
    ],
    "require": {
        "php": "^7.2.5 | ^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Haassie\\Timeular\\": "src/"
        }
    },
    "require-dev": {
        "symfony/dotenv": "^5.2",
        "overtrue/phplint": "^2.3",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpstan/phpstan": "^0.12.64"
    },
    "scripts": {
        "test:php:lint": [
            "phplint"
        ],
        "test:php:cgl": [
            "php-cs-fixer fix -v --dry-run --using-cache false --diff --diff-format=udiff"
        ],
        "test:php:cgl-fix": [
            "php-cs-fixer fix -v --using-cache false"
        ],
        "test:php:phpstan": [
            "phpstan analyse"
        ]
    }
}
